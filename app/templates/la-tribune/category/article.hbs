<div class="container-fluid mb-4">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="mb-0">{{article.title}}</h1>
        <small>{{article.updateDatetime}}</small>
      </div>
    </div>
    <div class="row">
      <div class="col mb-3">
        <div class="balados-thumbnail">
          {{#if article.thumbnail}}
            <img class="img-fluid" src={{article.thumbnail.url}} alt={{article.thumbnail.alt}}>
          {{else}}
            <img class="img-fluid" src="/assets/images/placeholder.jpg" alt={{t "placeholder.alt"}}>
          {{/if}}
        </div>
        <small>{{article.thumbnail.credits}}</small>
        <p>
          {{{article.content}}}
        </p>

        <div class="row">
          <div class="col logo-list">
            <h4>Partager l'article</h4>
            <div class="row">
              <div class="fb-share-button mx-1 ml-3"
                   data-href={{currentURL}}
                   data-layout="button_count"
                   size="large">
              </div>
              <a class="twitter-share-button mx-1"
                 href={{concat "https://twitter.com/intent/tweet?text=" (concat "Nouvel article sur l'Agenda: " article.title)}}
                 data-size="large">
                Tweet
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-3 p-0">
        {{#each article.authors as |author|}}
          <AuthorCard @author={{author}}/>
        {{/each}}
      </div>
    </div>
