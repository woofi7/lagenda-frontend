<div class="container">
  <div class="container-fluid my-4 pr-0 content">
    <div class="d-flex">
      <span class="ml-auto align-self-center">
        <PowerSelect @options={{this.sortProperties}} @selected={{this.selectedSort}} @onChange={{this.changeProperty}} as |property|>
          {{property.name}}
        </PowerSelect>
      </span>
    </div>
    <div class="row">
      {{#each this.visibleArticles as |article|}}
        <ArticleCard @article={{article}} />
      {{/each}}
    </div>
  </div>
</div>
