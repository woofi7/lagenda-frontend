<BsModal @onHide={{this.closeModal}}
         @open={{true}}
         @fade={{false}}
         @size="lg"
         @position="center"
         as |Modal|>
  <Modal.header class="flex-column pt-0">
    <h4 class="modal-title w-100">{{t "admin.partners.title"}}</h4>
  </Modal.header>
  <Modal.body class="px-0 pb-0">
    <div class="admin-modal">
      <div class="row pb-2">
        <div class="col">
          <LinkTo @route="admin.balado-partner.add" class="btn btn-primary float-left ml-0">{{t "admin.partners.add-partner"}}</LinkTo>
        </div>
      </div>
      <div class="row">
        <div class="col">
          {{outlet}}
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="list-group text-left">
            <SortableObjects @sortableObjectList={{this.sortablePartnersList}} @sortEndAction={{this.dragEndAction}} @sortingScope="categories">
              {{#each this.sortablePartnersList as |category|}}
                <DraggableObject @content={{category}}  @overrideClass="list-group-item list-group-item-action" @isSortable={{true}} @sortingScope="categories">
                  {{#if category.image}}
                    <img class="icon-img img-fluid" src={{category.image.url}} alt={{category.image.alt}}>
                  {{else}}
                    <img class="icon-img img-fluid" src="/assets/logo/logo-lagenda-white.png" alt={{t "placeholder.alt"}}>
                  {{/if}}
                  <span class="ml-2">{{category.name}}</span>
                  <span class="float-right">
                    {{#if category.unlisted}}
                      <span class="badge badge-pill badge-warning">Cach√©</span>
                    {{/if}}
                    <LinkTo @route="admin.balado-partner.edit" @model={{category.id}} class="btn btn-sm btn-icon"><i
                        class="fas fa-edit"></i></LinkTo>
                     <span class="handle">&varr;</span>
                  </span>
                </DraggableObject>
              {{/each}}
            </SortableObjects>
          </div>
        </div>
      </div>
    </div>
    {{#if this.canSave}}
      <div class="row pt-3">
        <div class="col">
          <BsButton class="float-right" @type="primary" {{on "click" this.save}}>{{t "admin.form.submit"}}</BsButton>
        </div>
      </div>
    {{/if}}
  </Modal.body>
</BsModal>