{{#each this.categories as |category|}}
  <div class="row my-2">
    <div class="col">
      <div class="row">
        {{#link-to "balados.category" category.id class="nav-item nav-link pl-1"}}
          <h3 class="col mb-0 pl-1">{{category.name}}</h3>
        {{/link-to}}
      </div>
      <div class="row">
        {{#each category.sortedBalados as |balado index|}}
          {{#if (lt index 3)}}
            {{#unless balado.unlisted}}
              <EpisodeCard @episode={{balado}} />
            {{/unless}}
          {{else if (eq index 3)}}
            <div class="col px-0 mx-2 my-auto">
              <div class="balados-more-list d-table ml-4">
                {{#link-to "balados.category" category.id  class="d-table-cell align-middle text-center text-white h3"}}
                  <i class="fas fa-ellipsis-h"></i>
                {{/link-to}}
              </div>
            </div>
          {{/if}}
        {{else}}
          <div class="col-12 col-sm-6 col-lg-3 p-0">
            <div class="nav-item nav-link p-0 m-2">
              <div class="balados-thumbnail">
                <img src="/assets/images/placeholder.jpg" class="img-fluid" alt="Image">
                <div class="hover d-table">
                  <div class="d-table-cell align-middle text-center text-white">
                    <div class="h5">
                      Ã€ venir
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
{{/each}}