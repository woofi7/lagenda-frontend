<div class="row">
  <div class="col">
    <div class="row">
      <h3 class="col">{{this.category.name}}</h3>
    </div>
    <div class="row">
      {{#each this.category.sortedBalados as |balado|}}
        {{#unless balado.unlisted}}
          <EpisodeCard @episode={{balado}} />
        {{/unless}}
      {{/each}}
    </div>
  </div>
</div>