<div class="row my-5">
  <div class="card bg-light mx-auto">
    <div class="card-body">
      <div class="row">
        <div class="col-8">
          <h5 class="card-title">{{author.firstName}} {{author.lastName}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">{{author.title}}</h6>
          <p class="card-text">{{author.desc}}</p>
        </div>
        <div class="col">
          {{#if author.image}}
            <img class="img-fluid" src={{author.image.url}} alt={{author.image.alt}}>
          {{else}}
            <img class="img-fluid" src="/assets/images/placeholder.jpg" alt={{t "placeholder.alt"}}>
          {{/if}}
        </div>
      </div>
      <div class="row mt-3">
        <div class="col">
          <h6>Articles</h6>
        </div>
      </div>
      <div class="row">
        <div class="col row">
          {{#each articles as |article|}}
            <ArticleCard @article={{article}} @hideImage={{true}} />
          {{/each}}
        </div>
        <div class="col-1 p-0 d-flex align-items-center">
          <div class="balados-more-list d-table">
            {{#link-to "la-tribune.category" articles.firstObject.articleCategory.id class="d-table-cell align-middle text-center text-white h3"}}
              <i class="fas fa-ellipsis-h"></i>
            {{/link-to}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
