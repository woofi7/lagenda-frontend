<div class="row my-5">
  <div class="card bg-light mx-auto">
    <div class="card-body">
      <div class="row">
        <div class="col-8">
          <h5 class="card-title">{{this.author.firstName}} {{this.author.lastName}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">{{this.author.title}}</h6>
          <p class="card-text">{{this.author.desc}}</p>
        </div>
        <div class="col">
          {{#if this.author.image}}
            <img class="img-fluid" src={{this.author.image.url}} alt={{this.author.image.alt}}>
          {{else}}
            <img class="img-fluid" src="/assets/images/placeholder.jpg" alt={{t "placeholder.alt"}}>
          {{/if}}
        </div>
      </div>
      <div class="row mt-3">
        <div class="col">
          <h6>{{t "about.articles"}}</h6>
        </div>
      </div>
      <div class="row">
        <div class="col row">
          {{#each this.articles as |article|}}
            <ArticleCard @article={{article}} @hideImage={{true}} />
          {{/each}}
        </div>
        <div class="col-1 p-0 d-flex align-items-center">
          <div class="balados-more-list d-table">

            <LinkTo @route="la-tribune.category-v2"
                    @model={{this.articles.firstObject.articleCategory.id}}
                    class="d-table-cell align-middle text-center text-white h3">
              <i class="fas fa-ellipsis-h"></i>
            </LinkTo>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
