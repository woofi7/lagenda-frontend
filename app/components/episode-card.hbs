<div class="col-12 col-sm-6 col-lg-3 p-0">
  <LinkTo @route="balados.category.balado"
          @models={{array @episode.category.id @episode.id}}
          class="nav-item nav-link p-0 m-2">
    <div class="balados-thumbnail">
      {{#if @episode.image}}
        <img class="img-fluid" src={{@episode.image.url}} alt={{@episode.image.alt}}>
      {{else}}
        <img class="img-fluid" src="/assets/images/placeholder.jpg" alt={{t "placeholder.alt"}}>
      {{/if}}
      <div class="hover d-table">
        <div class="d-table-cell align-middle text-center text-white">
          <div class="h5">
            {{t "episode-card.title" id=@episode.id}}
          </div>
          <div class="h6 text-uppercase ">
            {{@episode.title}}
          </div>
        </div>
      </div>
    </div>
  </LinkTo>
</div>
