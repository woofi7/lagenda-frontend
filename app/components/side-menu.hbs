<nav class="side-menu mx-md-0 mx-4 mt-4 mt-md-0 row">
  <ul class="list-unstyled col mb-1">
    <div class="row">
    <LinkTo @route="la-tribune" class="h3 w-100 text-white m-0">
      <div class="col py-2 clickable">
        Articles
        {{#if screen.isSmallAndDown}}
          <i {{on "click" this.toggleItems}} class={{concat "p-2 mb-0 fas float-right h4 " (if collapsed "fa-chevron-up" "fa-chevron-down")}}></i>
        {{/if}}
      </div>
    </LinkTo>
    </div>

    <BsCollapse @collapsed={{and collapsed screen.isSmallAndDown}}>
    {{#each @categories as |category index|}}
      {{#unless category.articles.firstObject.unlisted}}
        {{#if (eq index 0)}}
          <SideMenuCategory @category={{category}}/>
        {{else}}
          <SideMenuCategory @category={{category}} @collapsed={{true}} />
        {{/if}}
      {{/unless}}
    {{/each}}
    </BsCollapse>
  </ul>
</nav>