<nav class="side-menu mx-md-0 mx-4 mt-4 mt-md-0">
  <ul class="list-unstyled">
    <div class="row">
      <div class="col">
        <li class="p-1">
          <LinkTo @route="la-tribune" class="h3 mx-1 my-2">Articles</LinkTo>
          {{#if screen.isSmallAndDown}}
            <i {{on "click" this.toggleItems}} class={{concat "m-2 fas float-right clickable h4 " (if collapsed "fa-chevron-up" "fa-chevron-down")}}></i>
          {{/if}}
        </li>
      </div>
    </div>

    <BsCollapse @collapsed={{and collapsed screen.isSmallAndDown}}>
    {{#each @categories as |category index|}}
      {{#if (eq index 0)}}
        <SideMenuCategory @category={{category}}/>
      {{else}}
        <SideMenuCategory @category={{category}} @collapsed={{true}} />
      {{/if}}
    {{/each}}
    </BsCollapse>
  </ul>
</nav>